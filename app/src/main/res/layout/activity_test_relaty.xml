<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestRelaty">

    <TextView
        android:id="@+id/tw_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryAzul"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="48sp" />

    <EditText
        android:id="@+id/et_Pais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tw_Title"
        android:layout_margin="20dp"
        android:text="Pais" />

    <EditText
        android:id="@+id/et_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Pais"
        android:layout_margin="20dp"
        android:text="Ciudad" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_City"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/et_Cod"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:text="codigo" />

        <EditText
            android:id="@+id/et_Tal"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:text="Telefono" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryAzul"
        android:text="Guardar" />

</RelativeLayout>